{
  "manifest_version": 3,
  "name": "Country Map Highlighter",
  "version": "1.0",
  "description": "Highlights a country on a world map when you hover over its name.",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "country-codes.js",
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["svg/BlankMap-World.svg"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}