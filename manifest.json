{
  "manifest_version": 3,
  "name": "Country Map Highlighter",
  "version": "1.0",
  "description": "Highlights a country on a world map when you hover over its name.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "countries.js",
        "content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {}
}
